<core:FragmentDefinition
	xmlns="sap.m"
  xmlns:l="sap.ui.layout"
	xmlns:core="sap.ui.core"
  xmlns:app="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1">

  <Dialog title="Scelta Sottotipologia primo livello" >
    <content>
      <Panel  visible="{EntityModelTipo>/PanelFilterVisible}" >
        <l:Grid defaultSpan="XL12 L12 M12 S12" vSpacing="0">
            <!-- test -->
          <Label text="Ente:" ><layoutData><l:GridData span="XL2 L2 M6 S12" /></layoutData></Label>
          <Input value="{EntityModelTipo>/Bukrs}"  enabled="false" ><layoutData><l:GridData span="XL10 L10 M6 S12" /></layoutData></Input>
                      
          <Label text="Codice Titolo:" ><layoutData><l:GridData span="XL2 L2 M6 S12" /></layoutData></Label>
          <Input value="{EntityModelTipo>/CodTitolo}"><layoutData><l:GridData span="XL10 L10 M6 S12" /></layoutData></Input>
          
          <Label text="Codice Tipologia:" ><layoutData><l:GridData span="XL2 L2 M6 S12" /></layoutData></Label>
          <Input value="{EntityModelTipo>/CodTipologia}"><layoutData><l:GridData span="XL10 L10 M6 S12" /></layoutData></Input>
          
          <Label text="Descrizione Tipologia:" ><layoutData><l:GridData span="XL2 L2 M6 S12" /></layoutData></Label>
          <Input value="{EntityModelTipo>/DescTipologia}"><layoutData><l:GridData span="XL10 L10 M6 S12" /></layoutData></Input>
          
          <Label text="Cod. Sottotipologia I livello:" ><layoutData><l:GridData span="XL2 L2 M6 S12" /></layoutData></Label>
          <Input value="{EntityModelTipo>/CodSottotipologia1Liv}"><layoutData><l:GridData span="XL10 L10 M6 S12" /></layoutData></Input>

          <Label text="Descrizione Sottotipologia I livello:" ><layoutData><l:GridData span="XL2 L2 M6 S12" /></layoutData></Label>
          <Input value="{EntityModelTipo>/DescSottotipologia1Liv}"><layoutData><l:GridData span="XL10 L10 M6 S12" /></layoutData></Input>
         </l:Grid>
      </Panel>
    <Panel visible="{EntityModelTipo>/PanelContentVisible}">
      <Table class="sapUxAPObjectPageSubSectionAlignContent"
        id="_libTableTipo"
        items="{
          path: 'EntityModelTipo>/TipoResults'
        }"
        mode="SingleSelectMaster"
        growing="true"
        width="auto"> 
        <columns>
          <Column><Text text="Codice" /></Column>
          <Column><Text text="Tipologia" /></Column>
        </columns>
        <items>
          <ColumnListItem 
            app:ZcodTipo="{EntityModelTipo>ZcodTipo}"
            app:Ztipo="{EntityModelTipo>Ztipo}">
            <Text text="{EntityModelTipo>ZcodTipo}" />
            <Text text="{EntityModelTipo>Ztipo}" />										
          </ColumnListItem>
        </items>
      </Table>
    </Panel>
    </content>
    <buttons>
      <Button text="Chiudi" press="_libOnCloseTipoDialog" visible="{EntityModelTipo>/PanelFilterVisible}"/>
      <Button text="Cerca" press="_libOnSearchTipoDialog" visible="{EntityModelTipo>/PanelFilterVisible}"/>
      <Button text="Indietro" press="_libOnBackTipoDialog" visible="{EntityModelTipo>/PanelContentVisible}"/>
      <Button text="Conferma" press="_libOnConfirmTipoDialog" visible="{EntityModelTipo>/PanelContentVisible}"/>
    </buttons>    
  </Dialog>
</core:FragmentDefinition>
